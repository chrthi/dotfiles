{
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "sh",
        "xml"
      ]
    }
  },
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "python"
  ],
  "clangd.arguments": ["--background-index", "--clang-tidy", "--cross-file-rename", "--fallback-style=none", "--header-insertion=iwyu", "--query-driver=/usr/bin/*-gcc,/usr/bin/*-g++,/opt/**/*-gcc,/opt/**/*-g++"],
  "latex.build.executable": "latexmk",
  "latex.build.args": [
    "-lualatex",
    "-interaction=nonstopmode",
    "-synctex=1",
    "%f"
  ],
  "python.formatting.provider": "blackd"
}
